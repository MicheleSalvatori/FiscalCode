<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.runningexamples.fiscalcode">

    <application

        android:allowBackup="true"
        android:testOnly="false"
        android:icon="@mipmap/application_icon"
        android:label="Calcolo Codice Fiscale"
        android:roundIcon="@mipmap/application_icon_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ProfileActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelProfile" />
        <activity
            android:name=".ui.ProfileSettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelSettingsProfile" />
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelMain" />
        <activity
            android:name=".ui.SettingsActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelSettings" />
        <activity
            android:name=".ui.SavedActivity"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelSaved" />
        <activity
            android:name=".ui.CFDetail"
            android:configChanges="orientation"
            android:screenOrientation="locked"
            android:label="@string/labelDetail" />
        <activity android:name=".ui.WelcomeActivity">
            android:configChanges="orientation"
            android:screenOrientation="locked"
        </activity>
    </application>

</manifest>