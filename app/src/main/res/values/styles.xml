<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorStatusBarLight</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="DarkTheme" parent = "Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorStatusBarDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:editTextColor">@color/colorEditTextDark</item>
        <item name="android:textColorHint">@color/colorHintDark</item>
        <item name="android:editTextStyle">@color/colorAccentLight</item>
        <item name="colorButtonNormal">@color/colorSecondaryDark</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutocompleteTextViewDark </item>
    </style>

    <style name="AutocompleteTextViewDark" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/ic_launcher_background </item>
    </style>

</resources>
